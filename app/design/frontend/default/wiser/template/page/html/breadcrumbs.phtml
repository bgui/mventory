<?php if ($crumbs && is_array($crumbs)): ?>
<div class="container">
  <div class="breadcrumbs">
    <ul>
      <?php foreach ($crumbs as $_name => $_info): ?>

      <?php $_class = $_info['last'] ? $_name . ' breadcrumb-last' : $_name; ?>

      <?php if ($_info['link']): ?>
      <li class="<?php echo $_class; ?>">
        <a href="<?php echo $_info['link'] ?>" title="<?php echo $this->htmlEscape($_info['title']) ?>"><?php echo $this->htmlEscape($_info['label']) ?></a>
      </li>
      <?php else: ?>
      <li class="<?php echo $_class; ?>"><?php echo $this->htmlEscape($_info['label']) ?></li><?php endif; ?>

      <?php endforeach; ?>
    </ul>
  </div>
</div>
<?php endif; ?>