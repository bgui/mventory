<layout version="0.1.0">
  <catalog_product_view>
    <reference name="productivity.image.edit">
      <action method="setImageSelector">
        <selector><![CDATA[> #wrap > #cloudZoom > #image]]></selector>
      </action>

      <action method="setImageWrapperSelector">
        <selector><![CDATA[#product_addtocart_form > .default-image > .product-image]]></selector>
      </action>

      <action method="unsThumbWrapperSelector"></action>
      <action method="setThumbSelector">
        <selector><![CDATA[#product_addtocart_form > .default-image > .view_img_box > ul > li > a > img]]></selector>
      </action>

      <action method="setImageSize">
        <width>403</width>
        <height></height>
      </action>

      <action method="setThumbSize">
        <width>75</width>
        <height></height>
      </action>
    </reference>
  </catalog_product_view>
</layout>
